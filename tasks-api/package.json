{
  "name": "tasks-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "build": "tsc",
    "start:prod": "node dist/src/app.js",
    "prod": "cross-env NODE_ENV=production ts-node src/app.ts",
    "start:dev": "tsnd --respawn src/app.ts --debug",
    "syncModels": "ts-node ./scripts/db-sync-models.ts",
    "createModels": "ts-node ./scripts/db-write-init-data.ts",
    "gen:types": "openapi --input ../openapi/difinitions.yaml --output ../types/generated --exportServices false --exportCore false",
    "gen:swagger": "ref-resolver ../openapi/main.yaml ../openapi/generated.yaml",
    "dev": "yarn gen:types && yarn gen:swagger && yarn start:dev",
    "gen:salt": "ts-node ./scripts/generate-hash-salt.ts",
    "lint": "eslint . --ext .js,.ts && tsc --noEmit --incremental false --pretty",
    "lint:autofix": "eslint . --ext .js,.ts --fix"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.14",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.33",
    "@types/ramda": "^0.27.40",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.6.3",
    "@types/yamljs": "^0.2.31",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.2",
    "express-openapi-validator": "^4.12.4",
    "json-yaml-ref-resolver": "^0.0.9",
    "jsonwebtoken": "^8.5.1",
    "openapi-typescript-codegen": "^0.8.1",
    "passport": "^0.4.1",
    "passport-cookie": "^1.0.9",
    "passport-local": "^1.0.0",
    "ramda": "^0.27.1",
    "sequelize": "^6.5.0",
    "sequelize-cli": "^6.2.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.1"
  }
}
